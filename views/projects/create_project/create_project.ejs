<style>
    html,
    body {
        height: 100%;
        width: 100%;
    }

    section {
        min-height: 100vh;
    }

    .navbar {
        display: none;
    }

    .footer {
        display: none;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: var(--gray-100);
    }

    ion-icon {
        color: var(--gray-25);
    }

    .modalComponentes {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1000;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.95);
        transition: opacity 0.3s ease, transform 0.3s ease;
        pointer-events: none;
    }

    .modalComponentes.open {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
        pointer-events: auto;
    }

    .modalComponentes.closing {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.95);
        pointer-events: none;
    }

    .modalOverlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.6);
        z-index: 999;
    }

    .modalOverlay.active {
        display: block;
    }
</style>

