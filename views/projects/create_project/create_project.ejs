    <script>
        const buttonOpen = document.getElementById("addComponent");
        const modal = document.getElementById("modalComponentes");
        const buttonClose = document.getElementById("close");
        const overlay = document.getElementById("modalOverlay");

        buttonOpen.onclick = function () {
            modal.showModal();
            overlay.classList.add("active");
            // Garante que a classe 'open' seja adicionada após o showModal
            setTimeout(() => modal.classList.add("open"), 10);
        }

        function closeModal() {
            modal.classList.remove("open");
            modal.classList.add("closing");
            overlay.classList.remove("active");
            setTimeout(() => {
                modal.classList.remove("closing");
                modal.close();
            }, 300); // Tempo igual ao transition do CSS
        }

        buttonClose.onclick = closeModal;
        overlay.onclick = closeModal;

        // Impede o fechamento instantâneo pelo ESC ou backdrop
        modal.addEventListener('cancel', function(event) {
            event.preventDefault();
            closeModal();
        });
    </script>
