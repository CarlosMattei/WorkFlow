<script>
    document.addEventListener('DOMContentLoaded', () => {
        const input = document.querySelector('.searchbar-input');
        if (!input) return;

        input.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                const valor = input.value.trim();
                const path = window.location.pathname;

                if (valor.startsWith('#projetos')) {
                    const termo = valor.replace('#projetos', '').trim();
                    window.location.href = `/?busca=${encodeURIComponent(termo)}`;
                } else if (valor.startsWith('#freelancers')) {
                    const termo = valor.replace('#freelancers', '').trim();
                    window.location.href = `/freelancers?busca=${encodeURIComponent(termo)}`;
                } else if (valor.startsWith('#propostas')) {
                    const termo = valor.replace('#propostas', '').trim();
                    window.location.href = `/propostas?busca=${encodeURIComponent(termo)}`;
                } else {
                    const termoBusca = encodeURIComponent(valor);
                    if (path.includes('/freelancers')) {
                        window.location.href = `/freelancers?busca=${termoBusca}`;
                    } else if (path.includes('/propostas')) {
                        window.location.href = `/propostas?busca=${termoBusca}`;
                    } else if (path.includes('/projetos')) {
                        window.location.href = `/?busca=${termoBusca}`;
                    }
                }
            }
        });
    });
</script>